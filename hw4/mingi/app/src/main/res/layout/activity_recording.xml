<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recording">

    <EditText
        android:id="@+id/sample_rate"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_marginBottom="297dp"
        android:hint="录音采样率"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/start_record"
        app:layout_constraintStart_toStartOf="@+id/stop_record"
        app:layout_constraintTop_toBottomOf="@+id/stop_record" />

    <Button
        android:id="@+id/to_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:text="Main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="151dp"
        android:layout_marginBottom="26dp"
        android:text="START RECORD"
        app:layout_constraintBottom_toTopOf="@+id/stop_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stop_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="STOP RECORD"
        app:layout_constraintBottom_toTopOf="@+id/sample_rate"
        app:layout_constraintStart_toStartOf="@+id/start_record"
        app:layout_constraintTop_toBottomOf="@+id/start_record" />
</androidx.constraintlayout.widget.ConstraintLayout>